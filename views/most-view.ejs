<!DOCTYPE html>
<html lang="kr">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HOME</title>
</head>
<body>

    <div class="header">
        <div class="none">
            <a href="/mypage">
                <div class="profile"></div>
            </a>
            <div class="name">많은 사람들이 본 포스트</div>
        </div>
    </div>

    <div class="content">

        <a href="/write-post">
            <div class="box a10">
                <div class="search_pen imgs2"></div>
                <div class="write_text">글 작성하기</div>
            </div>
        </a>

    </div>

    <div class="parent">

        <div class="box a50">     
            <% for(var i = (viewsort.length - 1); i >= 0; i--){ %>
                <div class="a50_items" id="<%= i+1 %>" onclick="gogo(id)">
                    <div class="line_first">
                        <div class="a50_post">
                           <%= viewsort[i].post_title %>
                        </div>
                        <div class="a50_writer">
                            <%= viewsort[i].user_name %>
                        </div>
                    </div>
                    <div class="line_first">
                        <div class="a50_writer w1">
                            좋아요 <%= viewsort[i].like %>
                        </div>
                        <div class="a50_writer w2">
                            조회수 <%= viewsort[i].views %>
                        </div>
                        <div class="a50_writer w2 bold">
                            댓글 <%= viewsort[i].comment.length %>
                        </div>
                    </div>
                </div>
            <% } %>
        
        </div>

        <script>

            function gogo(value) {
                location.href = '/posts/' + value
            }

        </script>

    </div>

</body>
</html>

